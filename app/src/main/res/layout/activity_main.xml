<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/titleGrades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZODIAC SIGNS"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_weight="1"
        />
    <EditText
        android:id="@+id/numberMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put your birthday month here"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_weight="1"
        />
    <EditText
        android:id="@+id/numberDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put your birth day here"
        android:textSize="36sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/buttonResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Birthday MM/DD/YEAR"
        android:layout_weight="1"
        android:onClick="buttonPress"
        />
    <TextView
        android:id="@+id/zodiac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hello"
        android:textSize="90sp"
        android:gravity="center"
        />
</LinearLayout>